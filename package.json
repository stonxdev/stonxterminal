{
  "name": "colony",
  "version": "0.10.4",
  "description": "A journaling app with AI-assisted psychological insights",
  "main": "./out/main/index.js",
  "author": "Andre Pena",
  "displayName": "Everyone is fine",
  "homepage": "https://everyoneisfine.com",
  "type": "module",
  "scripts": {
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "start:web": "vite preview --config vite.config.web.ts --port 3000",
    "dev": "electron-vite dev",
    "dev:web": "vite --config vite.config.web.ts --open",
    "build:web": "npm run typecheck:web && vite build --config vite.config.web.ts",
    "preview:web": "vite preview --config vite.config.web.ts",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/google": "^1.2.11",
    "@ai-sdk/openai": "^1.3.15",
    "@anthropic-ai/sdk": "^0.39.0",
    "@atlaskit/pragmatic-drag-and-drop": "^1.7.4",
    "@atlaskit/pragmatic-drag-and-drop-hitbox": "^1.1.0",
    "@atlaskit/pragmatic-drag-and-drop-react-drop-indicator": "^3.2.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@google/generative-ai": "^0.24.0",
    "@headlessui/react": "^2.2.1",
    "@monaco-editor/loader": "^1.5.0",
    "@openrouter/ai-sdk-provider": "^0.4.5",
    "@tailwindcss/postcss": "^4.1.3",
    "@tanstack/react-router": "^1.157.5",
    "ai": "^4.3.9",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "electron-updater": "^6.3.9",
    "font-awesome": "^4.7.0",
    "i": "^0.3.7",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.563.0",
    "monaco-editor": "^0.52.2",
    "npm": "^11.3.0",
    "openai": "^4.93.0",
    "pixi.js": "^8.11.0",
    "postcss": "^8.5.3",
    "react-monaco-editor": "^0.58.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.3",
    "vitest": "^3.1.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@chromatic-com/storybook": "^5.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@storybook/addon-a11y": "^10.2.3",
    "@storybook/addon-docs": "^10.2.3",
    "@storybook/addon-onboarding": "^10.2.3",
    "@storybook/addon-themes": "^10.2.3",
    "@storybook/addon-vitest": "^10.2.3",
    "@storybook/react-vite": "^10.2.3",
    "@types/node": "^22.13.13",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "3.1.1",
    "@vitest/coverage-v8": "3.1.1",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "playwright": "^1.54.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^10.2.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-static-copy": "^3.1.0"
  }
}
